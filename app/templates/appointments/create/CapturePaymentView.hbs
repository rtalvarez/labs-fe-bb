<section class="capture-payment-view-content section">
    <h5>Datos del pago</h5>
    <!--<form action="">-->
        <!--<input type="text">-->
    <!--</form>-->

    <form class="capture-payment-form">
        <span class="card-errors"></span>
        <div class="row">
            <div class="col s12">
                <label for="troll">
                    <span>Nombre del tarjetahabiente</span>
                    <input id="troll" type="text" size="20" data-conekta="card[name]"/>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label>
                    <span>Número de tarjeta de crédito</span>
                    <input type="text" size="20" data-conekta="card[number]"/>
                </label>
            </div>
            <div class="col s3">
                <label>
                    <span>CVC</span>
                    <input type="text" size="4" data-conekta="card[cvc]"/>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label>
                    <span>Fecha de expiración (MM)</span>
                    <input type="text" size="2" data-conekta="card[exp_month]"/>
                </label>
            </div>
            <div class="col s6">
                <label>
                    <span>Fecha de expiracion (YYYY)</span>
                    <input type="text" size="4" data-conekta="card[exp_year]"/>
                </label>
            </div>
        </div>
        <!-- Información recomendada para sistema antifraude -->
        <div class="row">
            <div class="col s12">
                <label>
                    <span>Calle</span>
                    <input type="text" size="25" data-conekta="card[address][street1]"/>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label>
                    <span>Colonia</span>
                    <input type="text" size="25" data-conekta="card[address][street2]"/>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label>
                    <span>Ciudad</span>
                    <input type="text" size="25" data-conekta="card[address][city]"/>
                </label>
            </div>
            <div class="col s6">
                <label>
                    <span>Estado</span>
                    <input type="text" size="25" data-conekta="card[address][state]"/>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label>
                    <span>CP</span>
                    <input type="text" size="5" data-conekta="card[address][zip]"/>
                </label>
            </div>
            <div class="col s6">
                <label>
                    <span>País</span>
                    <input type="text" size="25" data-conekta="card[address][country]"/>
                </label>
            </div>
        </div>

        <button type="submit" class="btn waves-effect waves-light">Pagar</button>
    </form>
</section>